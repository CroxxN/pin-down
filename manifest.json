{
    "name": "Pin Down",
    "description": "Pin a Website",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/images/Pin(16x16).png",
            "32": "/assets/images/Pin(32x32).png",
            "48": "/assets/images/Pin(48x48).png",
            "128": "/assets/images/Pin(128x128).png"
          }
        },
    "icons": {
        "16": "/assets/images/Pin(16x16).png",
        "32": "/assets/images/Pin(32x32).png",
        "48": "/assets/images/Pin(48x48).png",
        "128": "/assets/images/Pin(128x128).png"
    },
    "web_accessible_resources": [
        {
          "resources": [ "*.png", "*.js", "*.css" ],
          "matches": [ "<all_urls>" ]
        }
      ]
  }